<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_message_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.wuyixiong.interview.view.CircleImageView
            android:id="@+id/iv_message_head_icon"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_marginTop="@dimen/dp5"

            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:src="@drawable/ic_unlogin" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_message_head_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="用户名"
                android:textSize="@dimen/dp20" />

            <TextView
                android:layout_marginTop="@dimen/dp5"
                android:id="@+id/tv_message_head_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="公司/时间"
                android:textColor="@color/pressed_text" />
        </FrameLayout>
        <TextView
            android:id="@+id/tv_message_head_type"
            android:layout_marginRight="@dimen/dp15"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp20"
            android:textColor="@color/pressed_text"
            android:text="类型"/>
    </LinearLayout>
</LinearLayout>