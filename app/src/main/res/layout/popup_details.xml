<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_above="@+id/ll_popup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/btn_details_popup_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3690EB"
            android:textSize="20dp"
            android:background="@drawable/shape_menu_top"
            android:text="收藏"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080"/>
        <Button
            android:id="@+id/btn_details_popup_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3690EB"
            android:textSize="20dp"
            android:background="@drawable/shape_menu_bottom"
            android:text="分享"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <Button
            android:id="@+id/btn_details_popup_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#3690EB"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/shape_menu"
            android:text="取消"/>
    </LinearLayout>




</RelativeLayout>